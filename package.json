{
  "name": "react-ts-ssr-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for react TypeScript and Parcel with SSR",
  "main": "app/indesx.js",
  "repository": "https://github.com/szabv/react-ts-ssr-boilerplate.git",
  "author": "szab.virag@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev": "yarn generate-imported-components && parcel app/index.html",
    "dev:server": "nodemon -e js,jsx,ts,tsx,html --ignore dist --ignore app/imported.js --exec 'yarn build && yarn start'",
    "start": "node dist/server",
    "build": "rimraf dist && yarn generate-imported-components && yarn create-bundles",
    "create-bundles": "concurrently \"yarn run create-bundle:client\" \"yarn create-bundle:server\"",
    "create-bundle:client": "cross-env BABEL_ENV=client parcel build app/index.html -d dist/client --public-url /dist/client",
    "create-bundle:server": "cross-env BABEL_ENV=server parcel build server/index.ts -d dist/server --public-url /dist --target=node",
    "generate-imported-components": "imported-components app app/imported.js"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "llog": "^0.2.0",
    "npm": "^6.12.0",
    "pino": "^5.13.5",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-helmet-async": "^1.0.4",
    "react-imported-component": "^6.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "styled-components": "^4.4.0",
    "through": "^2.3.8"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.6.0",
    "@types/cheerio": "^0.22.13",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/node": "^12.11.2",
    "@types/react-dom": "^16.9.2",
    "@types/react-helmet": "^5.0.12",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^4.1.19",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "nodemon": "^1.19.4",
    "parcel-bundler": "^1.12.4",
    "react-hot-loader": "^4.12.15",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.4"
  }
}
